<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkEase.Controls.MultiSelectPopup"
             BackgroundColor="White"
             Padding="20">

    <VerticalStackLayout>
        <Label Text="Select Options" 
               FontAttributes="Bold" 
               FontSize="Medium" 
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"/>

        <CollectionView ItemsSource="{Binding Options}" 
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalOptions="Center"/>
                        <Label Text="{Binding Name}" VerticalOptions="Center" Margin="10,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Close" 
                Command="{Binding CloseCommand}"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
