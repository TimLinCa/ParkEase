<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ParkEase.Page.MapPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:validation="clr-namespace:InputKit.Shared.Validations;assembly=InputKit.Maui"
    xmlns:vm="clr-namespace:ParkEase.ViewModel"
    x:DataType="vm:MapViewModel">

    <ScrollView>

        <!--  https://enisn-projects.io/docs/en/uranium/  -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Side Menu Section  -->
            <StackLayout
                Grid.Column="0"
                Padding="10"
                BackgroundColor="LightGray">

                <Label
                    Margin="10"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="Map Editor" />

                <Button
                    x:Name="btn_Draw"
                    Margin="50,50,50,0"
                    BackgroundColor="Blue"
                    Clicked="btn_Draw_Clicked"
                    Text="Draw Line"
                    VerticalOptions="Center" />

                <Button
                    x:Name="btn_Clear"
                    Margin="50,10,50,50"
                    Clicked="btn_Clear_Clicked"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Text="Clear Line"
                    VerticalOptions="Center" />

                <material:TextField
                    Title="Parking Spot"
                    Margin="10,3"
                    Text="{Binding ParkingSpot}">
                    <validation:RequiredValidation />
                </material:TextField>

                <!--  https://enisn-projects.io/docs/en/uranium/latest/theming/Icons#material-icons  -->
                <material:PickerField
                    Title="Enforcement Time"
                    Margin="10,3"
                    Icon="{FontImageSource FontFamily=MaterialOutlined,
                                           Glyph={x:Static m:MaterialRegular.Expand_circle_down}}"
                    ItemsSource="{Binding ParkingTimes}"
                    SelectedItem="{Binding SelectedParkingTime}">
                    <validation:RequiredValidation />
                </material:PickerField>

                <material:PickerField
                    Title="Parking Fee"
                    Margin="10,3"
                    Icon="{FontImageSource FontFamily=MaterialOutlined,
                                           Glyph={x:Static m:MaterialRegular.Expand_circle_down}}"
                    ItemsSource="{Binding ParkingFees}"
                    SelectedItem="{Binding SelectedParkingFee}">
                    <validation:RequiredValidation />
                </material:PickerField>

                <material:TextField
                    Title="Parking Capacity"
                    Margin="10,3"
                    Text="{Binding ParkingCapacity}">
                    <validation:RequiredValidation />
                </material:TextField>

                <Label
                    HorizontalOptions="Center"
                    Text="{Binding LocationInfo}"
                    VerticalOptions="Center" />

                <Button
                    x:Name="btn_Test"
                    Command="{Binding SubmitCommand}"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    MinimumWidthRequest="150"
                    Text="Submit"
                    VerticalOptions="Center" />

            </StackLayout>

            <!--  Map Section  -->
            <!--<maps:Map x:Name="myMap" Grid.Column="1" MapType="Satellite" IsShowingUser="True" IsTrafficEnabled="false"/>-->
            <WebView x:Name="mapWebView" Grid.Column="1" />

        </Grid>

    </ScrollView>

</ContentPage>