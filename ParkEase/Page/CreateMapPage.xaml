<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkEase.Page.CreateMapPage"
             xmlns:vm="clr-namespace:ParkEase.ViewModel"
             xmlns:drawables="clr-namespace:ParkEase.Core.Utilities;assembly=ParkEase.Core"
             Title="CreateMapPage">

    <ContentPage.BindingContext>
        <vm:CreateMapViewModel />
    </ContentPage.BindingContext>

    <ScrollView Background="Black">
        <VerticalStackLayout>
            <Label 
            Text="Welcome to .NET MAUI!!!!!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Button
            x:Name="UploadBtn"
            Text="Upload Image"
            Command="{Binding UploadImageClicked}"
            HorizontalOptions="Center"/>
            <Grid>
                <GraphicsView x:Name="RectangleDrawableView"
                Drawable="{Binding Drawable}"
                HeightRequest="700"
                WidthRequest="700"
                BackgroundColor="White"
                Background="White">

                </GraphicsView>
            </Grid>

            <!-- https://learn.microsoft.com/en-us/dotnet/maui/user-interface/controls/graphicsview?view=net-maui-8.0#position-and-size-graphical-objects -->
            <Image
                x:Name="UploadedImage"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="700"
                HeightRequest="700"
                Aspect="AspectFit">

                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapGestureRecognizerTapped"
                                      Buttons="Primary" />
                </Image.GestureRecognizers>

            </Image>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>