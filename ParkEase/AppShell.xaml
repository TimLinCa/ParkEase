<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ParkEase.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ParkEase"
    xmlns:page="clr-namespace:ParkEase.Page"
    Title="ParkEase"
    Shell.FlyoutBehavior="Flyout">


    <ShellItem Route="LogInPage">
        <ShellContent
            ContentTemplate="{DataTemplate page:LogInPage}"
            FlyoutItemIsVisible="False"
            NavigationPage.HasNavigationBar="False"
            Shell.FlyoutBehavior="Disabled" />
    </ShellItem>

    <Shell.FlyoutHeader>
        <Image
            Aspect="AspectFit"
            HorizontalOptions="Center"
            Source="parkease_logo.png"
            WidthRequest="100" />
    </Shell.FlyoutHeader>

    <FlyoutItem Title="UserMap">
        <ShellContent ContentTemplate="{DataTemplate page:UserMapPage}" Route="UserMapPage" />
    </FlyoutItem>


    <FlyoutItem Title="Map">
        <ShellContent ContentTemplate="{DataTemplate page:MapPage}" Route="MapPage" />
    </FlyoutItem>

    <FlyoutItem Title="CreateMap">
        <ShellContent ContentTemplate="{DataTemplate page:CreateMapPage}" Route="CreateMap" />
    </FlyoutItem>


    <MenuFlyoutSubItem />


</Shell>
